SET(CMAKE_SYSTEM_NAME Linux)
SET(CMAKE_SYSTEM_VERSION 1)
if (NOT "${AIRTAME_TOOLCHAIN}" STREQUAL "")
    SET (CMAKE_C_COMPILER  ${AIRTAME_TOOLCHAIN}/bin/arm-linux-gnueabihf-gcc)
    SET (CMAKE_CXX_COMPILER ${AIRTAME_TOOLCHAIN}/bin/arm-linux-gnueabihf-g++)
endif ()
if (NOT "${AIRTAME_SYSROOT}" STREQUAL "")
    SET(CMAKE_SYSROOT ${AIRTAME_SYSROOT})
    SET(CMAKE_FIND_ROOT_PATH ${AIRTAME_SYSROOT})
endif ()

SET(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
SET(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
SET(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
